@using AracKiralama_MVC.Models.Entity


@model List<Arac_Kayit>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/OrtakLayout.cshtml";
}

<table id="example" class="table table-striped table-bordered dt-responsive nowrap" style="width:100%"> 
    <!-- Export to PDF , Excel ve Listeleme -->
    <thead>
        <tr>
            <th>Araç ID</th>
            <th>Plaka</th>
            <th>Marka</th>
            <th>Model</th>
            <th>Yıl</th>
            <th>Renk</th>
            <th>Yakıt</th>
            <th>Günlük Kira Ücreti</th>
            <th>Sigorta Bitiş Tarihi</th>
            <th>Muayne Bitiş Tarihi</th>
            <th>Güncelle</th>
            <th>Sil</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Arac_ID</td>
                <td>@item.Plaka</td>
                <td>@item.Marka</td>
                <td>@item.Model</td>
                <td>@item.Yil</td>
                <td>@item.Renk</td>
                <td>@item.Yakit</td>
                <td>@item.Gunluk_Kira_Ucreti</td>
                <td>@item.Sigorta_Bitis_Tarihi</td>
                <td>@item.Muayne_Bitis_Tarihi</td>
                <td><a href="~/AracKayit/AracKayitGetir/@item.Arac_ID" class="btn btn-success">Güncelle</a></td>
                <td><a href="~/AracKayit/Sil/@item.Arac_ID" class="btn btn-danger">Sil</a></td>
            </tr>
        }
    </tbody>

</table>
<div style="margin-top:25px">
    <button style="width: 120px; height: 30px;" class="btn btn-success"><a style="color:white; font-size:15px;" href="~/AracKayit/AracKayitEkle">Yeni Araç Ekle</a></button><div />
