    <style>
        .d {
            width: 100%;
            height: 150px;
            margin-top: 0px;
            background-color: whitesmoke;
            background-image: url(/araclar/resim.jpeg); 
            background-position: center;
            background-size: cover;
            border-color: transparent;
            
        }
        #x {
            align-items: center;
            align-content: center;
            justify-content: center;
            width: 100%;
            height: 50px;
            margin-top: 50px;
            position: absolute;
            background-color: transparent;
            border-color: transparent;
        }
        #A {
            margin-bottom: 35px;
            font-size: 20px;
            font-weight: bold;
            color:white;
            margin-top:50px;
            margin-right:500px;
            
        }
        #B {
            margin-bottom: 50px;
            font-size: 18px;
            font-weight: bold;
            color: white;
            margin-top: 50px;
            margin-left: 150px;
        }
        .nav navbar-nav a {
            background-color:green;
        }
    </style>
</head>
<body>
    <div class="d">
        <nav class="navbar navbar-default" id="x">
            <div class="container-fluid">
                <div class="navbar-header">
                    <a class="navbar-brand" href="#" id="A">Araç Kiralama</a>
                </div>
                <ul class="nav navbar-nav" style="list-style-type:none; display:inline-block;" id="B">
                    <li><a style="color: white; background-color: gray;"  href="~/MusteriEkle/Index">Müşteri Ekle</a></li>
                    <li><a style="color: white; background-color: gray; " href="~/AracKayit/Index">Araç Kayit</a></li>
                    <li><a style="color: white; background-color: gray;" href="~/Sozlesme/Index">Sözleşme</a></li>
                    <li><a style="color: white; background-color: gray;" href="~/PersonelEkle/Index">Personel Ekle</a></li>
                    <li><a style="color: white; background-color: gray;" href="https://hgsmusteri.ptt.gov.tr/hgs.jsf" target="_blank">HGS</a></li>
                    <li><a style="color: white; background-color: gray;" href="https://www.turkiye.gov.tr/emniyet-arac-plakasina-yazilan-ceza-sorgulama" target="_blank">Cezalar</a></li>

                </ul>
            </div>
        </nav>
    </div>
    <br />

    @RenderBody()
    <div class="container">
    </div>
    <script src="https://code.jquery.com/jquery-3.3.1.js"></script>
    <script src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script> <!-- Export to PDF,Excel,Listeleme/DataTables kütüphane -->
    <script src="https://cdn.datatables.net/1.10.19/js/dataTables.bootstrap4.min.js"></script> <!-- Export to PDF,Excel,Listeleme/DataTables kütüphane -->
    <script src="https://cdn.datatables.net/buttons/1.5.2/js/dataTables.buttons.min.js"></script> <!-- Export to PDF,Excel,Listeleme/DataTables kütüphane -->
    <script src="https://cdn.datatables.net/buttons/1.5.2/js/buttons.bootstrap4.min.js"></script> <!-- Export to PDF,Excel,Listeleme/DataTables kütüphane -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script> <!-- Export to PDF,Excel,Listeleme/DataTables kütüphane -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.36/pdfmake.min.js"></script> <!-- Export to PDF,Excel,Listeleme/DataTables kütüphane -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.36/vfs_fonts.js"></script> <!-- Export to PDF,Excel,Listeleme/DataTables kütüphane -->
    <script src="https://cdn.datatables.net/buttons/1.5.2/js/buttons.html5.min.js"></script> <!-- Export to PDF,Excel,Listeleme/DataTables kütüphane -->
    <script src="https://cdn.datatables.net/buttons/1.5.2/js/buttons.print.min.js"></script> <!-- Export to PDF,Excel,Listeleme/DataTables kütüphane -->
    <script src="https://cdn.datatables.net/buttons/1.5.2/js/buttons.colVis.min.js"></script> <!-- Export to PDF,Excel,Listeleme/DataTables kütüphane -->
    <script src="https://cdn.datatables.net/responsive/2.2.3/js/dataTables.responsive.min.js"></script> <!--Export toPDF,Excel,Listeleme/DataTableskütüphane-->
    <script src="https://cdn.datatables.net/responsive/2.2.3/js/responsive.bootstrap4.min.js"></script> <!--Export toPDF,Excel,Listeleme/DataTableskütüphane-->
    <!-- Export to PDF,Excel,Listeleme / DataTables kütüphane -->
    <script>
        $(document).ready(function () {
            var table = $('#example').DataTable({
                lengthChange: false,
                buttons: ['copy', 'excel', 'csv', 'pdf', 'colvis']
            });

            table.buttons().container()
                .appendTo('#example_wrapper .col-md-6:eq(0)');
        });
    </script>
    <style>
        .menu {
            float: left;
            width: 200px;
        }   
    </style>
    <!-- Export to PDF,Excel,Listeleme / DataTables kütüphane -->
</body>
</html>